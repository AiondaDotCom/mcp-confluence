{
  "name": "@aiondadotcom/mcp-confluence-server",
  "version": "1.1.3",
  "description": "MCP server for Confluence API integration with Atlassian Cloud",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-confluence-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "confluence", "atlassian", "server", "model-context-protocol", "api"],
  "author": "Aionda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AiondaDotCom/mcp-confluence.git"
  },
  "homepage": "https://github.com/AiondaDotCom/mcp-confluence",
  "bugs": {
    "url": "https://github.com/AiondaDotCom/mcp-confluence/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "mcp.example.json",
    "mcp.windows.json",
    "install.bat",
    "start-server.bat"
  ]
}